<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutJuego"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF"
    tools:context=".JuegoActivity">

    <!-- TÍTULO -->
    <TextView
        android:id="@+id/textTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RONDA DE PREGUNTAS"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginBottom="8dp" />

    <!-- SUBTÍTULO -->
    <TextView
        android:id="@+id/textSubtitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Desliza para indicar tus respuestas"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginBottom="4dp" />

    <!-- INSTRUCCIONES -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DERECHA: respuesta verdadera"
        android:textColor="#2E7D32"/> <!-- Verde -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IZQUIERDA: respuesta falsa"
        android:textColor="#C62828"/><!-- Rojo -->

    <!-- TEXTO DE PROGRESO -->
    <TextView
        android:id="@+id/textProgreso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Respondidas 0"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <!-- RECYCLER VIEW -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewFlashCards"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- BOTÓN TERMINAR -->
    <Button
        android:id="@+id/botonTerminar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TERMINAR JUEGO"
        android:layout_marginTop="16dp"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF" />
</LinearLayout>
